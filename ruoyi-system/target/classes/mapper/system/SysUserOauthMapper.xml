<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysUserOauthMapper">
    <resultMap id="SysUserOauthMap" type="com.ruoyi.system.domain.SysUserOauth">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="provider" property="provider"/>
        <result column="provider_uid" property="providerUid"/>
        <result column="email" property="email"/>
        <result column="avatar" property="avatar"/>
    </resultMap>
    <select id="selectByProvider" resultMap="SysUserOauthMap">
        SELECT *
        FROM sys_user_oauth
        WHERE provider = #{provider}
          AND provider_uid = #{providerUid} LIMIT 1
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user_oauth
            (user_id, provider, provider_uid, email, avatar)
        VALUES (#{userId}, #{provider}, #{providerUid}, #{email}, #{avatar})
    </insert>

</mapper>
