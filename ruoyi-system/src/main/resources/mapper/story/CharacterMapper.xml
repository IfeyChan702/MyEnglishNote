<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.StoryCharacterMapper">

    <resultMap type="com.ruoyi.system.domain.StoryCharacter" id="StoryCharacterResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="avatarUrl"    column="avatar_url"    />
        <result property="storyCount"    column="story_count"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectStoryCharacterVo">
        select id, user_id, name, description, avatar_url, story_count, created_at, updated_at, del_flag
        from `story_character`
    </sql>

    <select id="selectStoryCharacterById" parameterType="Long" resultMap="StoryCharacterResult">
        <include refid="selectStoryCharacterVo"/>
        where id = #{id} and del_flag = '0'
    </select>

    <select id="selectStoryCharacterList" parameterType="com.ruoyi.system.domain.StoryCharacter" resultMap="StoryCharacterResult">
        <include refid="selectStoryCharacterVo"/>
        <where>
            del_flag = '0'
            <if test="userId != null">and user_id = #{userId}</if>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
        </where>
        order by created_at desc
    </select>

    <select id="selectStoryCharacterListByUserId" parameterType="Long" resultMap="StoryCharacterResult">
        <include refid="selectStoryCharacterVo"/>
        where user_id = #{userId} and del_flag = '0'
        order by created_at desc
    </select>

    <insert id="insertStoryCharacter" parameterType="com.ruoyi.system.domain.StoryCharacter" useGeneratedKeys="true" keyProperty="id">
        insert into `story_character`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="avatarUrl != null">avatar_url,</if>
            story_count,
            created_at,
            updated_at
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="avatarUrl != null">#{avatarUrl},</if>
            0,
            now(),
            now()
        </trim>
    </insert>

    <update id="updateStoryCharacter" parameterType="com.ruoyi.system.domain.StoryCharacter">
        update `story_character`
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            updated_at = now()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStoryCharacterById" parameterType="Long">
        update `story_character` set del_flag = '1' where id = #{id}
    </delete>

    <delete id="deleteStoryCharacterByIds" parameterType="Long">
        update `story_character` set del_flag = '1' where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="incrementStoryCount" parameterType="Long">
        update `story_character` set story_count = story_count + 1 where id = #{characterId}
    </update>

    <update id="decrementStoryCount" parameterType="Long">
        update `story_character` set story_count = GREATEST(story_count - 1, 0) where id = #{characterId}
    </update>

    <select id="searchStoryCharacters" resultMap="StoryCharacterResult">
        <include refid="selectStoryCharacterVo"/>
        where user_id = #{userId} and del_flag = '0'
        <if test="keyword != null and keyword != ''">
            and (name like concat('%', #{keyword}, '%')
            or description like concat('%', #{keyword}, '%'))
        </if>
        order by story_count desc, created_at desc
    </select>

</mapper>